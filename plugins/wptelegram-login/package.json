{
	"name": "wptelegram-login",
	"title": "WP Telegram Login",
	"version": "1.10.7",
	"description": "Let the users login to your website with their Telegram and make it simple for them to get connected and let them receive their email notifications on Telegram.",
	"private": true,
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-plugins-dev",
		"directory": "plugins/wptelegram-login"
	},
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-plugins-dev/issues"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --port=5004",
		"build": "wireit",
		"lint:php": "composer run lint",
		"setup:php": "wireit",
		"setup:php:prod": "wireit",
		"unset-vendor-dir": "composer config vendor-dir --unset"
	},
	"dependencies": {
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.29",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@types/wordpress__block-editor": "^11.5.9",
		"@types/wordpress__blocks": "^12.5.13",
		"@wordpress/block-editor": "^12.16.0",
		"@wordpress/blocks": "^12.25.0",
		"@wordpress/components": "^25.14.0",
		"@wordpress/element": "^5.25.0",
		"@wpsocio/adapters": "workspace:*",
		"@wpsocio/components": "workspace:*",
		"@wpsocio/form": "workspace:*",
		"@wpsocio/form-components": "workspace:*",
		"@wpsocio/i18n": "workspace:*",
		"@wpsocio/services": "workspace:*",
		"@wpsocio/utilities": "workspace:*",
		"@wpsocio/wpdev": "workspace:*",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"output": [
				"src/assets/build"
			]
		},
		"setup:php": {
			"command": "composer install",
			"dependencies": [
				"unset-vendor-dir"
			]
		},
		"setup:php:prod": {
			"command": "composer install --no-dev && pnpm run unset-vendor-dir",
			"dependencies": [
				"set-prod-vendor"
			]
		},
		"set-prod-vendor": {
			"command": "composer config vendor-dir src/vendor"
		}
	}
}
