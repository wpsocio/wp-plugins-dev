{
	"name": "wpsocio/wptelegram-comments",
	"description": "Use Telegram Comments widget for your WordPress posts or pages.",
	"scripts": {
		"lint": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php src/",
		"lint:skip-warnings": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php -n src/",
		"lint:fix": "\"vendor/bin/phpcbf\" --standard=phpcs.xml --extensions=php src/"
	},
	"require": {
		"kucrut/vite-for-wp": "^0.8.0",
		"wpsocio/wp-options": "dev-main"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0"
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/php/wp-options",
			"options": {
				"symlink": false
			}
		}
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
