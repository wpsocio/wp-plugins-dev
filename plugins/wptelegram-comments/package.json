{
	"name": "@wpsocio/wptelegram-comments",
	"version": "1.1.9",
	"title": "WP Telegram Comments",
	"description": "Add comments to posts/pages on your WordPress website by using Telegram Comments Widget",
	"private": true,
	"license": "GPL-3.0",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wptelegram-comments"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wptelegram-comments/issues"
	},
	"keywords": ["telegram", "comments", "discuss", "social", "widget"],
	"type": "module",
	"scripts": {
		"dev": "vite --port=5000",
		"build": "wpsocio build plugins/wptelegram-comments",
		"preview": "vite preview",
		"lint:php": "composer run lint",
		"setup:prod": "composer config vendor-dir src/vendor && composer install --no-dev",
		"setup:dev": "composer config vendor-dir --unset && composer install"
	},
	"dependencies": {
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.29",
		"@types/react": "^18.2.45",
		"@types/react-dom": "^18.2.17",
		"@wpsocio/adapters": "workspace:*",
		"@wpsocio/components": "workspace:*",
		"@wpsocio/dev": "workspace:*",
		"@wpsocio/form": "workspace:*",
		"@wpsocio/form-components": "workspace:*",
		"@wpsocio/i18n": "workspace:*",
		"@wpsocio/services": "workspace:*",
		"@wpsocio/utilities": "workspace:*",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3"
	}
}
