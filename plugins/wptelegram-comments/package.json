{
	"name": "@wpsocio/wptelegram-comments",
	"version": "1.1.9",
	"title": "WP Telegram Comments",
	"description": "Add comments to posts/pages on your WordPress website by using Telegram Comments Widget",
	"private": true,
	"license": "GPL-3.0",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-plugins-dev",
		"directory": "plugins/wptelegram-comments"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-plugins-dev/issues"
	},
	"keywords": ["telegram", "comments", "discuss", "social", "widget"],
	"type": "module",
	"scripts": {
		"dev": "vite --port=5003",
		"build": "wireit",
		"lint:php": "composer run lint",
		"setup:php": "wireit",
		"setup:php:prod": "wireit",
		"typecheck": "tsc --noEmit",
		"unset-vendor-dir": "composer config vendor-dir --unset"
	},
	"dependencies": {
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.29",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@wpsocio/adapters": "workspace:*",
		"@wpsocio/components": "workspace:*",
		"@wpsocio/form": "workspace:*",
		"@wpsocio/form-components": "workspace:*",
		"@wpsocio/i18n": "workspace:*",
		"@wpsocio/services": "workspace:*",
		"@wpsocio/utilities": "workspace:*",
		"@wpsocio/wpdev": "workspace:*",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"output": ["src/assets/build"]
		},
		"setup:php": {
			"command": "composer install",
			"dependencies": ["unset-vendor-dir"]
		},
		"setup:php:prod": {
			"command": "composer install --no-dev && pnpm run unset-vendor-dir",
			"dependencies": ["set-prod-vendor"]
		},
		"set-prod-vendor": {
			"command": "composer config vendor-dir src/vendor"
		}
	}
}
