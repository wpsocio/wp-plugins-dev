{
	"name": "wptelegram",
	"title": "WP Telegram",
	"version": "4.0.14",
	"description": "Integrate your WordPress site perfectly with Telegram with full control.",
	"private": true,
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-plugins-dev",
		"directory": "plugins/wptelegram"
	},
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-plugins-dev/issues"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --port=5002",
		"build": "wireit",
		"lint:php": "composer run lint",
		"setup:php": "wireit",
		"setup:php:prod": "wireit",
		"unset-vendor-dir": "composer config vendor-dir --unset"
	},
	"dependencies": {
		"ramda": "^0.29.1",
		"yup": "^1.3.3"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.29",
		"@types/ramda": "^0.29.10",
		"@types/react": "^18.2.48",
		"@types/react-dom": "^18.2.18",
		"@types/wordpress__edit-post": "^7.5.6",
		"@types/wordpress__editor": "^13.6.7",
		"@types/wordpress__media-utils": "^4.14.4",
		"@wordpress/components": "^25.15.0",
		"@wordpress/data": "^9.19.0",
		"@wordpress/edit-post": "^7.26.0",
		"@wordpress/editor": "^13.26.0",
		"@wordpress/element": "^5.26.0",
		"@wordpress/media-utils": "^4.40.0",
		"@wordpress/plugins": "^6.17.0",
		"@wpsocio/adapters": "workspace:*",
		"@wpsocio/components": "workspace:*",
		"@wpsocio/form": "workspace:*",
		"@wpsocio/form-components": "workspace:*",
		"@wpsocio/i18n": "workspace:*",
		"@wpsocio/icons": "workspace:*",
		"@wpsocio/services": "workspace:*",
		"@wpsocio/shared-wptelegram-ui": "workspace:*",
		"@wpsocio/utilities": "workspace:*",
		"@wpsocio/vite-wp-react": "workspace:*",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"wireit": "^0.14.3"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"output": [
				"src/assets/build"
			]
		},
		"setup:php": {
			"command": "composer install",
			"dependencies": [
				"unset-vendor-dir"
			]
		},
		"setup:php:prod": {
			"command": "composer install --no-dev && pnpm run unset-vendor-dir",
			"dependencies": [
				"set-prod-vendor"
			]
		},
		"set-prod-vendor": {
			"command": "composer config vendor-dir src/vendor"
		}
	}
}
