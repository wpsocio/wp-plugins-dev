{
	"name": "@wpsocio/wptelegram-widget",
	"title": "WP Telegram Widget",
	"version": "2.1.11",
	"description": "Display the Telegram Public Channel or Group Feed in a WordPress widget or anywhere you want using a shortcode.",
	"private": true,
	"license": "GPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wptelegram-widget"
	},
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wptelegram-widget/issues"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --port=5003",
		"build": "wpsocio build plugins/wptelegram-widget",
		"lint:php": "composer run lint",
		"preview": "vite preview",
		"setup:prod": "composer config vendor-dir src/vendor && composer install --no-dev",
		"setup:dev": "composer config vendor-dir --unset && composer install"
	},
