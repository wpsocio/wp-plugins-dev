{
	"name": "@wpsocio/vite-wp-react",
	"version": "1.0.0",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/vite-wp-react"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/vite-wp-react",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": [
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./config": {
			"require": "./dist/config.cjs",
			"import": "./dist/config.js"
		},
		"./utils": {
			"require": "./dist/utils/index.cjs",
			"import": "./dist/utils/index.js"
		},
		"./plugins": {
			"require": "./dist/plugins/index.cjs",
			"import": "./dist/plugins/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"config": [
				"./dist/config.d.ts"
			],
			"utils": [
				"./dist/utils/index.d.ts"
			],
			"plugins": [
				"./dist/plugins/index.d.ts"
			]
		}
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.2.1",
		"@wordpress/babel-plugin-makepot": "^5.34.0",
		"esbuild": "^0.19.12",
		"rollup": "^4.9.6",
		"rollup-plugin-external-globals": "^0.9.2",
		"sass": "^1.70.0",
		"vite-plugin-external": "^4.3.0"
	},
	"devDependencies": {
		"@types/node": "^20.11.7",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"wireit": "^0.14.4"
	},
	"peerDependencies": {
		"vite": "^5.0.12"
	},
	"scripts": {
		"build": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"prepublishOnly": "wireit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsup",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json"
			],
			"output": [
				"dist/**"
			]
		},
		"prepublishOnly": {
			"command": "pnpm run build",
			"dependencies": [
				"clean"
			]
		}
	}
}
