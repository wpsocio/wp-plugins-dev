{
	"name": "@wpsocio/vite-wp-react",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/vite-wp-react"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/vite-wp-react",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": [
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./config": "./dist/config.js",
		"./utils": "./dist/utils/index.js",
		"./plugins": "./dist/plugins/index.js"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.2.1",
		"@wordpress/babel-plugin-makepot": "^5.33.0",
		"esbuild": "^0.19.11",
		"rollup": "^4.9.6",
		"rollup-plugin-external-globals": "^0.9.2",
		"sass": "^1.70.0",
		"vite-plugin-external": "^4.2.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.5",
		"rimraf": "^5.0.5",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"peerDependencies": {
		"vite": "^5.0.12"
	},
	"scripts": {
		"build": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"preinstall": "wireit",
		"prepublishOnly": "wireit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				"tsconfig.tsbuildinfo"
			]
		},
		"preinstall": {
			"dependencies": [
				"build"
			]
		},
		"prepublishOnly": {
			"command": "pnpm run build",
			"dependencies": [
				"clean"
			]
		}
	}
}
