{
	"name": "@wpsocio/vite-wp-react",
	"version": "1.0.3",
	"description": "Set of tools to develop WordPress plugins and themes using React and Vite.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/vite-wp-react"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/vite-wp-react",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": [
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js"
		},
		"./config": {
			"require": "./dist/config.cjs",
			"import": "./dist/config.js"
		},
		"./utils": {
			"require": "./dist/utils/index.cjs",
			"import": "./dist/utils/index.js"
		},
		"./plugins": {
			"require": "./dist/plugins/index.cjs",
			"import": "./dist/plugins/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"config": [
				"./dist/config.d.ts"
			],
			"utils": [
				"./dist/utils/index.d.ts"
			],
			"plugins": [
				"./dist/plugins/index.d.ts"
			]
		}
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.3.1",
		"@wordpress/babel-plugin-makepot": "^6.4.0",
		"esbuild": "^0.23.0",
		"rollup": "^4.19.1",
		"rollup-plugin-external-globals": "^0.11.0",
		"sass": "^1.77.8",
		"vite-plugin-external": "^4.3.1"
	},
	"devDependencies": {
		"@types/node": "^20.14.12",
		"rimraf": "^6.0.1",
		"tsup": "^8.2.3",
		"typescript": "^5.5.4",
		"wireit": "^0.14.5"
	},
	"peerDependencies": {
		"vite": "^5.3.5"
	},
	"scripts": {
		"build": "wireit",
		"build:local": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"prepublishOnly": "wireit",
		"typecheck": "tsc --noEmit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsup",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json",
				"tsup.config.ts"
			],
			"output": [
				"dist/**"
			]
		},
		"build:local": {
			"command": "tsc --emitDeclarationOnly --declaration",
			"dependencies": [
				"build"
			]
		},
		"prepublishOnly": {
			"command": "pnpm run build",
			"dependencies": [
				"clean"
			]
		}
	}
}
