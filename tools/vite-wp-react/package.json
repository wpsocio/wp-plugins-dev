{
	"name": "@wpsocio/vite-wp-react",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"exports": {
		".": "./dist/index.js",
		"./utils": "./dist/utils/index.js",
		"./plugins": "./dist/plugins/index.js"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^4.2.1",
		"@wordpress/babel-plugin-makepot": "^5.33.0",
		"esbuild": "^0.19.11",
		"rollup": "^4.9.6",
		"rollup-plugin-external-globals": "^0.9.2",
		"sass": "^1.70.0",
		"vite": "^5.0.12",
		"vite-plugin-external": "^4.2.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.5",
		"rimraf": "^5.0.5",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"scripts": {
		"clean": "rimraf dist/ tsconfig.tsbuildinfo",
		"preinstall": "wireit",
		"build": "wireit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				"tsconfig.tsbuildinfo"
			]
		},
		"preinstall": {
			"dependencies": [
				"build"
			]
		}
	}
}
