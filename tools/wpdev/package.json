{
	"name": "@wpsocio/wpdev",
	"version": "1.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/wpdev"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/wpdev",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": [
		"bin",
		"dist",
		"src"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"bin": {
		"wpdev": "./bin/run.js"
	},
	"types": "dist/index.d.ts",
	"main": "bin/run.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"dependencies": {
		"@manypkg/find-root": "^2.2.1",
		"@manypkg/get-packages": "^2.2.0",
		"@manypkg/tools": "^1.1.0",
		"@oclif/core": "^3.18.1",
		"archiver": "^6.0.1",
		"chalk": "^5.3.0",
		"cssnano": "^6.0.3",
		"dotenv": "^16.3.2",
		"enquirer": "^2.4.1",
		"execa": "^8.0.1",
		"fast-glob": "^3.3.2",
		"find-up": "^7.0.0",
		"gettext-parser": "^7.0.1",
		"listr2": "^8.0.1",
		"parse-json": "^8.1.0",
		"postcss": "^8.4.33",
		"rimraf": "^5.0.5",
		"semver": "^7.5.4",
		"vite": "^5.0.12",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.2",
		"@types/gettext-parser": "^4.0.4",
		"@types/semver": "^7.5.6",
		"oclif": "^4.3.9",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"oclif": {
		"bin": "wpdev",
		"dirname": "wpdev",
		"commands": "./dist/commands",
		"topicSeparator": " "
	},
	"scripts": {
		"build": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"prepublishOnly": "wireit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				"tsconfig.tsbuildinfo"
			]
		},
		"prepublishOnly": {
			"command": "pnpm run build",
			"dependencies": [
				"clean"
			]
		}
	}
}
