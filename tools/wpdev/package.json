{
	"name": "@wpsocio/wpdev",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"bin": {
		"wpdev": "./bin/run.js"
	},
	"types": "dist/index.d.ts",
	"main": "bin/run.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./vite": {
			"import": "./dist/vite.js",
			"require": "./dist/vite.js"
		}
	},
	"dependencies": {
		"@oclif/core": "^3.18.1",
		"@wordpress/i18n": "^4.48.0",
		"@wpsocio/vite-wp-react": "workspace:*",
		"archiver": "^6.0.1",
		"chalk": "^5.3.0",
		"cssnano": "^6.0.3",
		"dotenv": "^16.3.1",
		"enquirer": "^2.4.1",
		"execa": "^8.0.1",
		"fast-glob": "^3.3.2",
		"find-up": "^7.0.0",
		"listr2": "^8.0.1",
		"parse-json": "^8.1.0",
		"postcss": "^8.4.33",
		"read-pkg": "^9.0.1",
		"rimraf": "^5.0.5",
		"semver": "^7.5.4",
		"vite": "^5.0.11",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.2",
		"@types/semver": "^7.5.6",
		"oclif": "^4.3.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"oclif": {
		"bin": "wpdev",
		"dirname": "wpdev",
		"commands": "./dist/commands",
		"topicSeparator": " "
	},
	"scripts": {
		"clean": "rimraf dist/ tsconfig.tsbuildinfo",
		"preinstall": "wireit",
		"build": "wireit",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json"
			],
			"output": [
				"dist/**",
				"tsconfig.tsbuildinfo"
			]
		},
		"preinstall": {
			"dependencies": [
				"build"
			]
		}
	}
}
