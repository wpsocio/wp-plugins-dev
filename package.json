{
	"name": "@wpsocio/root",
	"private": true,
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "",
	"license": "GPL-3.0",
	"type": "module",
	"scripts": {
		"build": "wireit",
		"dev": "wireit",
		"dev:cleanup": "wireit",
		"lint:all": "wireit",
		"lint:js": "wireit",
		"lint:js:fix": "biome format ./ --write",
		"lint:php": "wireit",
		"setup:php": "wireit",
		"test:php": "wireit",
		"typecheck": "wireit",
		"upgrade-all": "pnpm ncu -u && pnpm -r exec pnpm ncu -u",
		"wp": "composer run wp -- "
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.2",
		"@changesets/cli": "^2.27.1",
		"@wpsocio/adapters": "workspace:*",
		"@wpsocio/wpdev": "workspace:*",
		"npm-check-updates": "^16.14.12",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"wireit": "^0.14.3"
	},
	"wireit": {
		"dev": {
			"command": "pnpm -r --workspace-concurrency=Infinity run dev",
			"service": true
		},
		"dev:cleanup": {
			"command": "pnpm -r --filter=./plugins/* exec pnpm rimraf src/assets/build/dev-server.json"
		},
		"build": {
			"command": "pnpm -r run build"
		},
		"lint:all": {
			"dependencies": [
				"lint:js",
				"lint:php"
			]
		},
		"lint:js": {
			"command": "biome lint ./"
		},
		"lint:php": {
			"command": "pnpm -r run lint:php"
		},
		"test:php": {
			"command": "pnpm -r run test:php"
		},
		"typecheck": {
			"dependencies": [
				"typecheck:tools",
				"typecheck:packages",
				"typecheck:plugins"
			]
		},
		"typecheck:packages": {
			"command": "pnpm -r --filter=./packages/js/* exec tsc --noEmit"
		},
		"typecheck:plugins": {
			"command": "pnpm -r --filter=./plugins/* exec tsc --noEmit"
		},
		"typecheck:tools": {
			"command": "pnpm -r --filter=./tools/* exec tsc --noEmit"
		},
		"setup:php": {
			"dependencies": [
				"setup:php:root",
				"setup:php:packages",
				"setup:php:plugins"
			]
		},
		"setup:php:packages": {
			"command": "pnpm -r --filter=./packages/php/* run setup:php"
		},
		"setup:php:root": {
			"command": "composer install --ignore-platform-reqs"
		},
		"setup:php:plugins": {
			"command": "pnpm -r --filter=./plugins/* run setup:php",
			"dependencies": [
				"setup:php:packages"
			]
		}
	},
	"wpdev": {
		"repo-type": "monorepo",
		"env-file": ".env"
	}
}
