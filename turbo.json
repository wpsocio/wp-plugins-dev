{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"dev": {
			"cache": false
		},
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"setup": {
			"cache": false,
			"dependsOn": ["^setup"]
		},
		"lint:php": {
			"cache": false,
			"dependsOn": ["setup", "^lint:php"]
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"test": {
			"outputs": []
		},
		"test:watch": {
			"cache": false
		}
	},
	"globalDependencies": [".env", "tsconfig.json"]
}
