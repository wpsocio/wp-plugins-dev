{
	"$schema": "https://turborepo.org/schema.json",
	"globalDotEnv": [".env"],
	"pipeline": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"outputs": ["src/assets/build/**"],
			"inputs": ["js/**"],
			"dependsOn": ["^build"]
		},
		"setup:php": {
			"cache": false
		},
		"lint:php": {
			"cache": false
		},
		"test:php": {
			"cache": false
		},
		"setup:php:prod": {
			"dependsOn": ["^setup:prod"]
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"test": {
			"outputs": []
		},
		"test:watch": {
			"cache": false
		}
	},
	"globalDependencies": [".env", "tsconfig.json"]
}
