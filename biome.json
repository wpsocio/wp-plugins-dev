{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"files": {
		"include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"],
		"ignore": [
			"dist/*",
			"build/*",
			"node_modules/*",
			"vendor/*",
			".wireit/*"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
